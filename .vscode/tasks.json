{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: gcc build active file",
                        "command": "/usr/bin/gcc",
                        "args": [
                                "-g",
                                "${file}",
                                "-lcriterion",
                                "-o",
                                "${fileDirname}/${fileBasenameNoExtension}"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "Task generated by Debugger."
                },
                {
                        "type": "shell",
                        "label": "gdbserver run",
                        "command": "${fileDirname}/${fileBasenameNoExtension}",
                        "args": [
                                "--debug=gdb"
                        ],
                        "isBackground": false,
                        "dependsOn":["C/C++: gcc build active file"]                
                }
        ],
        "version": "2.0.0"
}